@import url("https://fonts.googleapis.com/css2?family=Modak&family=Roboto&family=Pacifico&display=swap");

body {
  font-family: "Roboto", sans-serif;
  font-size: 16px;
  margin: auto;
}

.dropContentzz {
  overflow: scroll;
  max-height: 500px;
  opacity: 0.9;
  background-color: red;
}

.item:hover {
  background-color: blue;
}

.selected {
  /* background-color: red; */
  color: white;
  border-bottom: 2px solid orange;
  border-radius: 0px;
}

.navbar {
  max-width: 500px;
  margin: auto;
}

.addNote {
  margin: 20px 0px 40px 0px;
  padding: 10px 0px 10px 0px;
}

/* a:link {
  text-decoration: none;
} */

nav {
  display: flex;
  justify-content: right;
  align-items: baseline;
  /* background: rgb(223, 222, 222);  */
  /* padding: 10px 5px; */
  /* border-radius: 3px;*/
}

.navLink {
  margin: 10px;
  padding: 10px;
  text-align: center;
  box-sizing: border-box;
  height: 40px;
  /* border-radius: 5px; */
}

.navLogo {
  /* margin: 10px; */
  /* padding: 10px; */
  padding-bottom: 20px;
  border-radius: 5px;
}

.navLogo {
  font-family: Pacifico;
  font-size: 1.4em;
  flex-grow: 1;
}

input {
  width: 60%;
  box-sizing: border-box;
}

.edit {
  border-bottom: 4px solid red;
}

.navLink:hover,
.edit {
  /* background: rgba(247, 92, 92, 0.986); */
  border-bottom: 4px solid orange;
  /* border-style: hidden hidden hidden; */
  color: white;
  text-decoration: none;
  box-sizing: border-box;
  transition: 100ms;
  /* margin-bottom: 4px; */
}

.note {
  /* background-color: #485462; */
  background-color: rgb(67, 83, 92);
  padding: 10px 7px 7px 10px;
  margin: 10px 0px 10px 0px;
  border-radius: 5px;
  font-size: 0.9em;
}

.timestamp {
  text-align: right;
  font-size: 0.7em;
  margin-top: -3px;
  margin-right: 10px;
  margin-bottom: 2px;
}

.select-css {
  background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23007CB2%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E"),
    linear-gradient(to bottom, #ffffff 0%, #e5e5e5 100%);
  background-repeat: no-repeat, repeat;
  background-position: right 0.7em top 50%, 0 0;
  background-size: 0.65em auto, 100%;
  background-color: #fff;
  font-size: 1.1em;
  color: #444;
  width: 45%;
}

.noteline1 {
  display: flex;
  justify-content: space-around;
}

/* @media only screen  */
@media all and (min-device-width: 320px) and (max-device-width: 480px) and (-webkit-min-device-pixel-ratio: 2) {
  body {
    color: blue;
    font-size: 0.9em;
  }
  .navLink,
  .navLogo {
    margin: 2px;
    padding: 2px;
    height: 60px;
    width: 80px;
  }

  nav {
    margin: 2px;
    display: flex;
    justify-content: right;
    align-items: baseline;
  }
}
